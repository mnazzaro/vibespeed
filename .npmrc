# pnpm configuration for this project

# Ensure lockfile is always updated when dependencies change
# This prevents the "broken lockfile" errors
frozen-lockfile=false

# Allow execution of lifecycle scripts for specific packages
# This ensures lefthook can install git hooks properly
enable-pre-post-scripts=true

# Hoist pattern to ensure proper dependency resolution
# This helps with Electron and other packages that expect certain structures
shamefully-hoist=true

# Strict peer dependencies to catch issues early
strict-peer-dependencies=false

# Auto-install peers to reduce warnings (optional, can be set to true if desired)
auto-install-peers=false

node-linker=hoisted